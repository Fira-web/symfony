

<title>{% block title %}home{% endblock %}</title>
{% block stylesheets %}
 <link href="{{ asset('css.css') }}" rel="stylesheet">
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
 {% endblock %}

{% block body %}



{#% include ['index/menu.html.twig', 'mymenu'] %#}

 {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert-{{ type }} alert " role="alert" style="margin:0; border:none; border-radius:5px;">
        <h1>{{message}}</h1>
                </div>
            {% endfor %}
   {% endfor %}
   <div class="container">

   {% include('index/menu.html.twig') %}
</div>

   
<div class="container">


{% for job in jobs %}

  <div class="card" style="display: inline-block;">
      <div class="card__header">
          <a href="{{path('job.show',{id:job.id})}}">
              <img src="{{vich_uploader_asset(job)|default('/images/products/Default-61c4887ac293e372416607.jpg')}}" alt="{{job.title}}" class="card__image" width="600"/> 
              {#<img src="https://media.bitdegree.org/storage/media/images/2018/08/what-is-a-web-developer.jpg" alt="card__image" class="card__image" width="600">
        #}
          </a>
      </div>
      <div class="card__body">
          <span class="tag tag-blue">{{job.title}}</span>
          <h4>{{job.title}} </h4>
          <p>{{job.description| u.truncate(60,'...', false)}}</p>
      </div>
      <div class="card__footer">
        <div class="user">
          <div class="user__info">
            <h5>{{job.id}} TND</h5>
            <small>Created By <b>{{job.userA.firstName}} {{job.userA.lastName}}</b></small>
          </div>
        </div>
      </div>
  </div>
  

  {% endfor %}
  
  </div>
  
</div>
   {% include('index/footer.html.twig') %}
   

{% endblock %}